@model Course


<div class="row mt-3">
        <div class="col-md-4">
        <img src="~/img/@Model.Image" class="img-fluid rounded" alt="">
    </div>
    <div class="col-md-8">
        
            <a asp-controller="Course" asp-action="Details" asp-route-id="@Model.Id"><h5 class="card-title">@Model.Title</h5></a>
        
        <p class="card-text">@Model.Description</p>
        <div>
            @if(Model.Tags != null){
            @foreach(var tag in Model.Tags){
                <span class="badge bg-danger">@tag</span>
            }
            }
        </div>
    
    </div>
</div>
